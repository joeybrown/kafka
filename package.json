{
  "name": "kafka-presentations",
  "version": "1.0.0",
  "description": "Marp presentations for Kafka topics",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "node scripts/build-diagrams.js && marp --input-dir ./src --output-dir ./dist --allow-local-files",
    "build:pdf": "marp ./src/kafka-introduction.md --pdf --output ./dist/kafka-introduction.pdf --allow-local-files",
    "serve": "node scripts/build-diagrams.js && marp --input-dir ./src --server --allow-local-files",
    "watch": "node scripts/build-diagrams.js && marp --input-dir ./src --output-dir ./dist --watch --allow-local-files",
    "dev": "node scripts/build-diagrams.js && marp --input-dir ./src --server --watch --allow-local-files",
    "install:marp": "yarn add -D @marp-team/marp-cli && yarn add @marp-team/marp-core"
  },
  "keywords": [
    "marp",
    "presentations",
    "kafka",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "@mermaid-js/mermaid-cli": "^11.9.0",
    "puppeteer": "^24.19.0"
  },
  "dependencies": {
    "@marp-team/marp-core": "^4.1.0"
  }
}
